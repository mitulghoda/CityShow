<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.HomeActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/add_product"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_plus"
                android:text="@string/add_product"
                android:tint="@color/white"
                app:borderWidth="0dp"
                app:elevation="6dp"
                android:visibility="gone"
                app:fabSize="normal"
                app:layout_anchorGravity="top|right|end"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/colorHintGray" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/rectangle_gradient"
                android:visibility="visible"
                app:itemIconTint="@color/bottom_nav_icon_color"
                app:itemTextColor="@color/black"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu" />

            <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation
                android:id="@+id/bottomNavigationCurve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:visibility="gone"
                app:cbn_background="@color/colorPrimary"
                app:cbn_curve_radius="26dp"
                app:cbn_fabColor="@color/colorPrimary"
                app:cbn_height="76dp"
                app:cbn_iconColor="@color/white"
                app:cbn_icon_size="24dp"
                app:cbn_selectedIconColor="@color/white"
                app:cbn_selected_icon_size="48dp"
                app:cbn_shadowColor="@color/grey_dark"
                app:cbn_titleColor="@color/white"
                app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>