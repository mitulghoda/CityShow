<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_12sdp">

                <com.app.cityshow.views.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:onClick="@{(v)->clickListener.onClick(v)}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="@dimen/_1sdp"
                    app:riv_corner_radius="@dimen/_30sdp"
                    app:riv_oval="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp">

                    <com.app.cityshow.views.TextView
                        android:id="@+id/txtName"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_bold"
                        android:maxLines="1"
                        android:text="Johny Depp"
                        android:textSize="@dimen/_15ssp"
                        tools:text="Johny Depp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtStatus"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/grey_dark"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        tools:text="You are awesome" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_chevron_right" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black_alpha_10"
                android:ellipsize="end"
                android:fontFamily="@font/sf_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/_25sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="@string/general"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:id="@+id/layShops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{(v)->clickListener.onClick(v)}">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/my_shops"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />

            <LinearLayout
                android:id="@+id/layProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{(v)->clickListener.onClick(v)}">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/my_product"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />

            <LinearLayout
                android:id="@+id/layDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{(v)->clickListener.onClick(v)}">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/add_discount"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_alpha_10"
                android:ellipsize="end"
                android:fontFamily="@font/sf_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/_25sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="@string/subscription"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:id="@+id/layPlan"
                android:layout_width="match_parent"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_upgrade_account"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/upgrade_account"
                    android:textSize="@dimen/_12ssp"
                    app:drawableEndCompat="@drawable/ic_chevron_right" />

                <com.app.cityshow.views.TextView
                    android:id="@+id/txt_subscription"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:background="@drawable/gray_border_rounder_5dp"
                    android:fontFamily="@font/sf_bold"
                    android:maxWidth="@dimen/_150sdp"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Basic Plan"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    tools:text="Basic Plan" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />

            <RelativeLayout
                android:id="@+id/layout_subscription_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_renew"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:text="Renew On, 25th Oct, 2019 "
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_price"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_renew"
                    android:gravity="end"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:text="150.00 INR / Month"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_cancel_subscription"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/sf_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_12sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="@string/cancel"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                app:drawableEndCompat="@drawable/ic_chevron_right" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_alpha_10"
                android:ellipsize="end"
                android:fontFamily="@font/sf_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/_25sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="@string/other"
                android:textSize="@dimen/_12ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_privacy_policy"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="@dimen/_10sdp"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="1"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_12sdp"
                android:text="@string/privacy_policy"
                android:textSize="@dimen/_12ssp"
                app:drawableEndCompat="@drawable/ic_chevron_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_terms"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="@dimen/_10sdp"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="1"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_12sdp"
                android:text="@string/terms_conditions"
                android:textSize="@dimen/_12ssp"
                app:drawableEndCompat="@drawable/ic_chevron_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/black_alpha_10" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLogout"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="1"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_12sdp"
                android:text="@string/logout"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_removeAccount"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="1"
                android:onClick="@{(v)->clickListener.onClick(v)}"
                android:padding="@dimen/_12sdp"
                android:text="@string/remove_account"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightest_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_version_label"
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/version"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_version"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/black_alpha_10" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>