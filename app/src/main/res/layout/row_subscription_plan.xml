<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickLister"
            type="android.view.View.OnClickListener" />

        <variable
            name="data"
            type="com.app.cityshow.model.subscription.Plan" />
    </data>

    <androidx.cardview.widget.CardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/plan_selector">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <com.app.cityshow.views.TextView
                    android:id="@+id/tvActivePlan"
                    style="@style/TextViewShadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="@string/active_plan"
                    android:textColor="@color/black_alpha_95"
                    android:textSize="@dimen/_24sdp"
                    android:visibility="gone"
                    tools:text="@string/active_plan" />

                <com.app.cityshow.views.TextView
                    style="@style/TextViewShadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{data.name}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_24sdp"
                    tools:text="Basic Plan" />

                <com.app.cityshow.views.TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{data.getPackageDuration()}"
                    android:textSize="@dimen/_20sdp"
                    tools:text="100 / 3months" />

                <com.app.cityshow.views.TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{data.getPackageShops()}"
                    android:textSize="@dimen/_20sdp"
                    tools:text="Maximum 10 shops" />

                <com.app.cityshow.views.TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{data.getPackageProduct()}"
                    android:textSize="@dimen/_20sdp"
                    tools:text="Maximum 100 products" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>